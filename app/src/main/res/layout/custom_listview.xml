<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageViewLista"
        android:layout_width="101dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/androidxd"
        android:layout_weight="0.11" />

    <TextView
        android:id="@+id/textViewCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewLista" />

    <TextView
        android:id="@+id/textViewTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textViewCodigo"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageViewLista" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTipo"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/imageViewLista"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textViewTitulo"
        android:layout_toEndOf="@+id/imageViewLista"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/textViewMonto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/imageViewLista"
        android:layout_toEndOf="@+id/imageViewLista" />

</RelativeLayout>
