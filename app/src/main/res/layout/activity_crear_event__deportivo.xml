<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jhair.proyecto.CrearEvent_DeportivoActivity">

    <TextView
        android:id="@+id/titulo_deportivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo Evento Deportivo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/colorAccent"/>
    <GridLayout
        android:id="@+id/griLayout"
        android:layout_margin="15dp"
        android:columnCount="2"
        android:layout_below="@id/titulo_deportivo"
        android:rowCount="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_columnWeight="2"
            android:id="@+id/tipoDeporte"
            android:textSize="19dp"
            android:text="Tipo de deporte:" />
        <Spinner
            android:layout_columnWeight="2"
            android:id="@+id/tipo_Deporte"
            android:layout_width="180dp">
        </Spinner>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_columnWeight="2"
            android:text="Equipo 1:"
            android:textSize="19dp"/>
        <EditText
            android:id="@+id/equipo1"
            android:layout_marginTop="10dp"
            android:layout_columnWeight="2"
            android:textSize="13dp"
            android:layout_width="180dp"
            android:hint="nombre del equipo 1"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_columnWeight="2"
            android:text="Equipo 2:"
            android:textSize="19dp"/>
        <EditText
            android:id="@+id/equipo2"
            android:layout_marginTop="10dp"
            android:layout_columnWeight="2"
            android:textSize="13dp"
            android:layout_width="180dp"
            android:hint="nombre del equipo 2"/>

        <Button
            android:id="@+id/nuevoEventDeport"
            android:layout_columnWeight="4"
            android:layout_marginTop="100dp"
            android:layout_columnSpan="2"
            android:text="Crear Evento"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/blanco"
            />

    </GridLayout>

</RelativeLayout>
