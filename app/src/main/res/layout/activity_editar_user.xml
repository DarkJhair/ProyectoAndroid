<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jhair.proyecto.Registro">

    <TextView
        android:id="@+id/txtTituloEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Usuario"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtnom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/txtTituloEditar"
        android:layout_marginTop="25dp"

        android:ems="10"
        android:hint="Escriba Usuario"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/edtNombre"
        android:layout_alignStart="@+id/edtNombre"
        android:layout_alignRight="@+id/edtedad"
        android:layout_alignEnd="@+id/edtedad" />



    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Escriba Nombre"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_below="@+id/edtnom"
        android:layout_alignLeft="@+id/edtedad"
        android:layout_alignStart="@+id/edtedad"
        android:layout_alignRight="@+id/edtedad"
        android:layout_alignEnd="@+id/edtedad" />

    <EditText
        android:id="@+id/edtedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNombre"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="Escriba Edad"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/btnEditar"
        android:layout_alignStart="@+id/btnEditar"
        android:layout_alignRight="@+id/btnEditar"
        android:layout_alignEnd="@+id/btnEditar" />
    <EditText
        android:id="@+id/edtpassw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Escriba Contrasena"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_below="@+id/edtedad"
        android:layout_alignLeft="@+id/edtedad"
        android:layout_alignStart="@+id/edtedad"
        android:layout_alignRight="@+id/edtedad"
        android:layout_alignEnd="@+id/edtedad" />

    <TextView
        android:id="@+id/spinner"
        android:text="tipUser"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtpassw"
        android:layout_alignStart="@+id/edtpassw"
        android:layout_below="@+id/edtpassw"
        android:layout_marginTop="13dp"
        android:layout_alignRight="@+id/edtpassw"
        android:layout_alignEnd="@+id/edtpassw" />
    <Button
        android:id="@+id/btnEditar"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="Editar Usuario"
        android:textColor="@color/blanco" />

</RelativeLayout>
