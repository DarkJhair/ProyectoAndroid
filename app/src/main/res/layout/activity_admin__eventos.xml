<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jhair.proyecto.admin_EventosActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Administracion de Eventos"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/colorPrimary"/>
    <LinearLayout
        android:padding="30dp"
        android:id="@+id/linear"
        android:layout_marginTop="20dp"
        android:layout_below="@id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_eliminarEvent"
            android:theme="@style/BotonRaised"
            android:text="Cancelar evento"
            android:layout_width="match_parent"
            android:layout_height="65dp" />
        <Button
            android:id="@+id/btn_editar"
            android:layout_marginTop="10dp"
            android:text="Editar un evento"
            android:theme="@style/BotonRaised"
            android:layout_width="match_parent"
            android:layout_height="65dp" />
        <Button
            android:id="@+id/btn_verEvento"
            android:layout_marginTop="10dp"
            android:text="Ver Evento"
            android:theme="@style/BotonRaised"
            android:layout_width="match_parent"
            android:layout_height="65dp" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/fab_btn"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_add_white_24dp"
        android:layout_below="@+id/linear"
        android:layout_alignParentRight="true"
        android:layout_marginRight="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp" />
</RelativeLayout>
